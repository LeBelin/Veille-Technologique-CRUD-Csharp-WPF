<Window x:Class="GC.DateSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sélectionner une date" Height="200" Width="300">
    <Grid>
        <DatePicker Name="datePicker" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"/>
        <Button Content="Valider" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="10" Click="ValiderButton_Click"/>
        <Button Content="Annuler" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="10" Click="AnnulerButton_Click"/>
        <Label Content="Date de l'article" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
